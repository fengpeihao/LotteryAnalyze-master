<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_periods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="期数"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_periods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="2020001"
        app:layout_constraintLeft_toRightOf="@id/text_periods"
        app:layout_constraintTop_toTopOf="@id/text_periods" />

    <TextView
        android:id="@+id/text_beforehand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="猜测号码"
        app:layout_constraintLeft_toLeftOf="@id/text_periods"
        app:layout_constraintTop_toBottomOf="@id/text_periods" />

    <TextView
        android:id="@+id/tv_beforehand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_12"
        android:text="猜测号码"
        app:layout_constraintLeft_toRightOf="@id/text_beforehand"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_beforehand" />

    <TextView
        android:id="@+id/text_opencode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实出号码"
        app:layout_constraintLeft_toLeftOf="@id/text_periods"
        app:layout_constraintTop_toBottomOf="@id/tv_beforehand" />

    <TextView
        android:id="@+id/tv_opencode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="实出号码"
        app:layout_constraintBottom_toBottomOf="@id/text_opencode"
        app:layout_constraintLeft_toRightOf="@id/text_opencode"
        app:layout_constraintTop_toTopOf="@id/text_opencode" />
</android.support.constraint.ConstraintLayout>