<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="号码"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_arise_count"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="出现次数"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_theory_count"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="理论出现次数"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_arise_frequency"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="出现频率"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_ave_omit"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="平均遗漏"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_max_omit"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="最大遗漏"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_pre_omit"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="上次遗漏"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_current_omit"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="本次遗漏"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_continuous_chance"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="连出几率"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_beforehand_frequency"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="预出几率"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_4169E1" />

        <TextView
            android:id="@+id/tv_anaplerosis_frequency"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="回补几率"
            android:textColor="@color/color_7B68EE"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>
</LinearLayout>