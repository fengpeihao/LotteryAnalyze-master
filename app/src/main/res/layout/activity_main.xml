<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_ssq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="双色球"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_dlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="大乐透"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="历史数据"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_ssq_omit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="双色球遗漏数据分析"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_dlt_omit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="大乐透遗漏数据分析"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_ssq_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="双色球数据猜测对比"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_dlt_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="大乐透数据猜测对比"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_at_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="排列三最近百期数据" />

        <Button
            android:id="@+id/btn_at_anaylyze_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="排列三遗漏数据分析" />

        <Button
            android:id="@+id/btn_at_anaylyze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="排列三数据猜测对比" />

        <Button
            android:id="@+id/btn_etcf_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="11选5最近百期数据" />

        <Button
            android:id="@+id/btn_etcf_anaylyze_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="11选5遗漏数据分析" />

        <Button
            android:id="@+id/btn_etcf_anaylyze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="11选5数据猜测对比" />
    </LinearLayout>
</ScrollView>